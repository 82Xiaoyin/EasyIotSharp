<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  
  <log4net>
    <logger name="LogFileAppender" additivity="false">
      <level value="ALL" />
      <appender-ref ref="LogFileAppender" />
    </logger>
    
    <logger name="HistoryDataAppender" additivity="false">
      <level value="ALL" />
      <appender-ref ref="HistoryDataAppender" />
    </logger>
    
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <file value="logs/" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <datePattern value="yyyy-MM-dd.log" />
      <maximumFileSize value="5120KB" />
      <maxSizeRollBackups value="1000" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d{HH:mm:ss} %-5level %message%newline" />
      </layout>
    </appender>

    <appender name="HistoryDataAppender" type="log4net.Appender.RollingFileAppender">
      <file value="D:/mqdata/baitashan/" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyyMMddHH'.TXT'" />
      <staticLogFileName value="false" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="FATAL" />
        <levelMax value="FATAL" />
      </filter>
    </appender>
  </log4net>
</configuration>